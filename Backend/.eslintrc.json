  "extends": [
    "plugin:node/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
//    "indent": [
//      "error",
//      "tab"
//    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
//    "quotes": [
//      "error",
//      "single"
//    ],
//    "semi": [
//      "error",
//      "always"
//    ],
